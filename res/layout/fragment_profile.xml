<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ptevalform.FormActivity$PlaceholderFragment" >

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/greenbox"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Edit"
        android:textColor="@color/white" />
    
    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSubmit"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:text=""
        android:textColor="@color/red" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/error"
        android:layout_alignLeft="@+id/btnSubmit"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnSubmit" android:id="@+id/relativeLayout1">

        <TextView
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/occu"
            android:paddingTop="20dp"
            android:text="Birthdate"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/text_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_height"
            android:paddingTop="20dp"
            android:text="Age"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_age"
            android:paddingTop="20dp"
            android:text="Phone"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/text_employer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_phone"
            android:paddingTop="20dp"
            android:text="Employer"
            android:textAppearance="?android:attr/textAppearanceSmall" />

	    <EditText
	        android:id="@+id/age"
	        android:layout_width="90dp"
	        android:layout_height="30dp"
	        android:layout_alignBaseline="@+id/text_age"
	        android:layout_alignBottom="@+id/text_age"
	        android:layout_alignLeft="@+id/birth_date"
	        android:layout_alignRight="@+id/birth_date"
	        android:ems="10"
	        android:inputType="number" 
	        android:background="@drawable/boxes"
	        android:textSize="12dp"/>

	    <EditText
	        android:id="@+id/phone"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_alignLeft="@+id/first_name"
	        android:layout_alignBaseline="@+id/text_phone"
	        android:layout_alignBottom="@+id/text_phone"
	        android:layout_alignParentRight="true"
	        android:layout_toRightOf="@+id/TextView09"
	        android:ems="10"
	        android:inputType="phone" 
	        android:background="@drawable/boxes"
	        android:textSize="12dp"/>

	    <EditText
	        android:id="@+id/employer"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_alignLeft="@+id/first_name"
	        android:layout_alignBaseline="@+id/text_employer"
	        android:layout_alignBottom="@+id/text_employer"
	        android:layout_alignParentRight="true"
	        android:layout_toRightOf="@+id/name1"
	        android:background="@drawable/boxes"
	        android:ems="10" 
	        android:textSize="12dp"/>

	    <EditText
	        android:id="@+id/first_name"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/occu"
	        android:layout_marginLeft="10dp"
	        android:background="@drawable/boxes"
	        android:ems="10"
	        android:inputType="textPersonName" 
	        android:textSize="12dp"/>

	    <TextView
	        android:id="@+id/name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/first_name"
	        android:layout_alignBottom="@+id/first_name"
	        android:layout_alignParentLeft="true"
	        android:text="First Name"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <TextView
	        android:id="@+id/name1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/first_name"
	        android:paddingTop="15dp"
	        android:text="Last Name"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <TextView
	        android:id="@+id/occu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/id"
	        android:paddingTop="20dp"
	        android:text="Occupation"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <EditText
	        android:id="@+id/occupation"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_alignBaseline="@+id/occu"
	        android:layout_alignBottom="@+id/occu"
	        android:layout_alignLeft="@+id/first_name"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/boxes"
	        android:ems="10"
	        android:inputType="textPersonName"
	        android:textSize="12dp" />
	    
		<TextView
	        android:id="@+id/id"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/name1"
	        android:paddingTop="20dp"
	        android:text="Client ID"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	    
	  	<EditText
	        android:id="@+id/clientID"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_alignBaseline="@+id/id"
	        android:layout_alignBottom="@+id/id"
	        android:layout_alignLeft="@+id/first_name"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/boxes"
	        android:ems="10"
	        android:inputType="textPersonName"
	        android:textSize="12sp" />

	    <EditText
	        android:id="@+id/last_name"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_alignBaseline="@+id/name1"
	        android:layout_alignBottom="@+id/name1"
	        android:layout_alignLeft="@+id/occupation"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/boxes"
	        android:ems="10"
	        android:inputType="textPersonName"
	        android:textSize="12dp" />

	    <EditText
	        android:id="@+id/weight"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_alignBaseline="@+id/text_weight"
	        android:layout_alignBottom="@+id/text_weight"
	        android:layout_alignLeft="@+id/height"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/boxes"
	        android:ems="10"
	        android:inputType="number"
	        android:textSize="12dp" />

	    <EditText
	        android:id="@+id/height"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_alignBaseline="@+id/text_height"
	        android:layout_above="@+id/height"
	        android:layout_toRightOf="@+id/text_weight"
	        android:background="@drawable/boxes"
	        android:layout_marginLeft="10dp"
	        android:ems="10"
	        android:inputType="number"
	        android:textSize="12dp" >

	        <requestFocus />
	    </EditText>

	    <EditText
	        android:id="@+id/birth_date"
	        android:layout_width="90dp"
	        android:layout_height="30dp"
	        android:layout_alignBaseline="@+id/dob"
	        android:layout_alignBottom="@+id/dob"
	        android:layout_alignLeft="@+id/occupation"
	        android:background="@drawable/boxes"
	        android:digits="0123456789/"
	        android:ems="10"
	        android:hint="mm/dd/yyyy"
	        android:imeActionLabel="Next"
	        android:imeOptions="actionNext"
	        android:inputType="textCapWords|textPersonName"
	        android:singleLine="true"
	        android:textSize="12dp" />

	    <TextView
	        android:id="@+id/text_weight"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/age"
	        android:layout_alignBottom="@+id/age"
	        android:layout_toRightOf="@+id/age"
	        android:paddingTop="20dp"
	        android:paddingLeft="10dp"
	        android:text="height"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <TextView
	        android:id="@+id/text_height"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/birth_date"
	        android:layout_alignBottom="@+id/birth_date"
	        android:layout_alignLeft="@+id/text_weight"
	        android:paddingLeft="10dp"
	        android:paddingTop="20dp"
	        android:text="Height"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>


</RelativeLayout>